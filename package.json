{
  "name": "track-my-notes",
  "version": "0.3.4",
  "description": "App to store, organise and publish notes",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "test": "mocha test/*.test.js --require test/hooks.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mj-felix/track-my-notes.git"
  },
  "author": "MJ Felix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mj-felix/track-my-notes/issues"
  },
  "homepage": "https://github.com/mj-felix/track-my-notes#readme",
  "dependencies": {
    "aws-sdk": "^2.937.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-html-sanitizer": "^1.0.0",
    "express-mongo-sanitize": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.15",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "mocha": "^9.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  }
}
